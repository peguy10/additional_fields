<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rayon_form" model="ir.ui.view">
        <field name="name">product.rayon.form</field>
        <field name="model">product.rayon</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code_rayon"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <record id="view_rayon_tree" model="ir.ui.view">
            <field name="name">product.rayon.tree</field>
            <field name="model">product.rayon</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code_rayon"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
</odoo>
